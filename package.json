{
  "name": "run-on-output",
  "version": "1.0.0",
  "description": "Execute tasks when CLI output patterns are detected",
  "type": "module",
  "bin": {
    "run-on-output": "./bin/cli.js",
    "roo": "./bin/cli.js"
  },
  "exports": "./run-on-output.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/sinedied/run-on-output"
  },
  "scripts": {
    "start": "node bin/cli.js",
    "test": "xo && vitest run",
    "test:unit": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:basic": "node bin/cli.js -p 'lo.*l' -n 'test:echo' -r 'echo \"command ok\"' -m 'message ok' echo 'hello world'",
    "test:echo": "echo \"npm script executed successfully\"",
    "lint": "xo",
    "lint:fix": "xo --fix",
    "release:check": "semantic-release --dry-run"
  },
  "keywords": [
    "cli",
    "output",
    "monitoring",
    "patterns",
    "regex",
    "automation",
    "command-line"
  ],
  "author": {
    "name": "Yohan Lasorsa",
    "url": "https://github.com/sinedied"
  },
  "homepage": "https://github.com/sinedied/run-on-output",
  "bugs": {
    "url": "https://github.com/sinedied/run-on-output/issues"
  },
  "license": "MIT",
  "release": {
    "extends": "semantic-release-npm-github",
    "branches": "main"
  },
  "prettier": {
    "trailingComma": "none",
    "bracketSpacing": true
  },
  "xo": {
    "space": true,
    "prettier": true,
    "rules": {
      "max-nested-callbacks": "off",
      "unicorn/no-process-exit": "off"
    }
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "files": [
    "bin",
    "run-on-output.js"
  ],
  "devDependencies": {
    "@vitest/coverage-v8": "^2.0.5",
    "semantic-release": "^24.2.6",
    "semantic-release-npm-github": "^5.0.0",
    "vitest": "^2.0.5",
    "xo": "^1.1.1"
  }
}
